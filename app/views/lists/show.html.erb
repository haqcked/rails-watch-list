<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
      <h3><%= @list.name %></h3>
      <%= link_to list_path(@list), class: "text-danger",
      data: {turbo_method: :delete, turbo_confirm: "Delete '#{@list.name}' list?"} do %>
      <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </div>
  <hr>

  <%# <div class="d-flex flex-wrap justify-content-center"> %>
  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <div class="col-12 col-sm-6 mb-4">
        <div class="card m-2">
          <%= image_tag movie.poster_url, alt: movie.title, class: "card-img-top rounded-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %> • <%= movie.rating %> ⭐️</h5>
            <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <p class="card-text"><%= bookmark.comment %></p>
            <div class="d-flex justify-content-end">
              <%= link_to bookmark_path(bookmark), class: "text-danger",
              data: {turbo_method: :delete, turbo_confirm: "Delete #{movie.title} from '#{@list.name}' list?"} do %>
              <i class="fa-regular fa-trash-can"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<hr>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>

<hr>
<%= link_to "Back", lists_path %>

</div>

