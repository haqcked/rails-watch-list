<div class="container p-4">
  <div class="nav justify-content-end">
    <%= link_to "Edit", edit_movie_path, class: "btn btn-outline-primary" %>
    <%= link_to "Delete",
      movie_path(@movie), class: "btn btn-outline-danger",
      data: {turbo_method: :delete, turbo_confirm: "Delete #{@movie.title}?"} %>
  </div>

  <hr>
  <h2><%= @movie.title %></h2>
  <% if @movie.poster_url.present? %>
  <%= image_tag @movie.poster_url, style: "width: 200px; height: 300px;" %>
  <% end %>
  <p>Overview: <%= @movie.overview %></p>
  <p>Rating: <%= @movie.rating %></p>

<hr>
<%= link_to "Back to the list", movies_path %>


</div>
